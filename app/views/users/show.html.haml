= @user.name + "の投稿一覧"
- @posts.each do |post|
  = link_to (post.title), post_path(post.id)
  = post.content
  - post.images.each do |image|
    = link_to (image_tag image.src.url), post_path(post.id)
  - post.tags.each do |tag|
    = link_to (tag.name), tag_posts_path(tag_id: tag.id)

- if user_signed_in?
  - unless current_user?(@user)
    - if current_user.following?(@user)
      = form_for(current_user.following_relationships.find_by(following_id: @user.id), html: { method: :delete }) do |f|
        = f.submit "Unfollow", class: "#"
    - else
      = form_for(current_user.following_relationships.build(following_id: @user.id)) do |f|
        = f.hidden_field :following_id
        = f.submit "Follow", class: "#"
  followings
  = link_to (@user.followings.count), following_user_path(@user.id)
  followers
  = link_to (@user.followers.count), followers_user_path(@user.id)
  