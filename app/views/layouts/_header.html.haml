.navbar
  .container.d-flex.justify-content-between
    .navbar-brand.d-flex.align-items-center
      %h4
        = link_to "Morip", root_path, class: "title"
    .navbar-dark.navbar-toggler{type: "button",
      data: {toggle: "collapse",
            target: "#navbarHeader"},
      aria: {controls: "navbarHeader",
            expanded: "false",
            label: "Toggle navigation"}}
      %span.navbar-toggler-icon

.collapse.navbar#navbarHeader.shadow-sm
  .container
    .row.ml-auto
      .col-sm-8.col-md-12
        - if user_signed_in?
          %ul.list-unstyled
            %li
              = link_to "マイページ", user_path(current_user), class: "menu"
            %li
              = link_to "新規投稿", new_post_path, class: "menu"
            %li
              = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "menu"
            %li
              = link_to "クイズ", "#", class: "menu"
        - else
          %ul.list-unstyled
            %li
              = link_to "新規登録", new_user_registration_path, class: "menu"
            %li
              = link_to "ログイン", new_user_session_path, class: "menu"
            %li
              = link_to "かんたんログイン", user_guest_sign_in_path, method: :post, class: "menu"
            %li
              = link_to "ユーザー一覧", "#", class: "menu"
        = form_with(url: search_posts_path, local: true, method: :get, class: "form-inline") do |f|
          = f.text_field :keyword, placeholder: "Search", class: "form-control mr-2"
          = f.submit "Search", class: "btn btn-outline-primary"