- if user_signed_in?
  - if post.liked_by?(current_user)
    = link_to "/posts/:post_id/likes(.:format)" , class: "like-button", method: :delete, remote: true do
      = icon("fas","heart", class: "like-button-icon")
    = post.likes.count
  - else
    = link_to post_likes_path(post.id) , class: "unlike-button", method: :post, remote: true do
      = icon("far","heart", class: "unlike-button-icon")
    = post.likes.count
- else
  = link_to post_likes_path(post.id) , class: "unlike-button", method: :post, remote: true do
    = icon("fas","heart", class: "unlike-button-icon")
  = post.likes.count