- if user_signed_in?
  - if post.liked_by?(current_user)
    = link_to post_like_path(post.id, post.likes.ids) ,class: "like-button-heart", method: :delete, remote: true do
      = icon("fas","heart", class: "like-button-icon")
    = post.likes.count
  - else
    = link_to post_likes_path(post.id) , class: "like-button-heart", method: :post, remote: true do
      = icon("far","heart", class: "unlike-button-icon")
    = post.likes.count
- else
  = icon("fas","heart", class: "unlike-button-icon")
  = post.likes.count