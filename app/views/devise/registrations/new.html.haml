.account-wrapper
  .account-wrapper-inner
    .account-main
      %h2 アカウントを作成
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource 
        .form-label
          = f.label :ニックネーム
          %em (20文字以内) 必須
          %br/
          = f.text_field :name, autofocus: true, class: "form-field"
        .form-label
          = f.label :プロフィール
          %em (200文字以内) 任意
          %br/
          = f.text_area :profile, autofocus: true, class: "form-area"
        .form-label
          = f.label :メールアドレス
          %em (200文字以内) 必須
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field"
        .form-label
          = f.label :パスワード
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} 文字以上) 必須
          %br/
          = f.password_field :password, autocomplete: "new-password", class: "form-field"
        .form-label
          = f.label :もう一度パスワードを入力してください
          %em 必須
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-field"
        .form-label
          = f.label :プロフィール画像
          %em 任意
          %br/
          = f.file_field :image
        .actions
          = f.submit "アカウントを作成する", class: "actions-btn"
        .form-label
          = "すでにアカウントをお持ちですか？"
          = render "devise/shared/links"